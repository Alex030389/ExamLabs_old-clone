                                    //-                     img(src='./assets/img/bitmap-1.png')
                    .order__second
                        .order__second-general
                            .order__second-left
                                .order__title
                                    h2 Option 2: Pre-Order an Exam
                                .order__description
                                    p You can pre-order any exam and PrepAway will arrange it for you within 4 weeks.
                            .order__second-right
                                .order__value
                                    p Price
                                .order__price
                                    h3 $355,34
                        .order__form.order__form--margin
                            form.order__submit#formSecond
                                    .order__label
                                        label.order__label-line
                                            h4 Exam Code
                                                span *
                                            input(type="text" placeholder="Exam Code").order__input#inputSecond
                                            #inputSecondError
                                    .order__label
                                        label.order__label-line
                                            h4 Your Email
                                                span *
                                            input(type="text" placeholder="Email").order__input#inputThird
                                            #inputThirdError
                                    .order__title-responsive-text
                                        h4 $355,34
                                    .order__button-color
                                        button(type="submit").button-submit-preorder-page.button-submit--changed Pre-Order an Exam
                        .order__steps
                            .order__title.order__title--padding
                                h2 How can I pre-order my exam?
                            ol.steps__list
                                li.steps__item Enter the exam code
                                li.steps__item Prepay your exam. Get them in 4 weeks 
                                li.steps__item Open with Avanset Exam Simulator
                                li.steps__item.steps__item--main Start studying and pass the exam!
        include ../common/_footer
    include ../common/_sidebar
    include ../common/_search-responsive-element
    include ../common/_modal-how-it-works

